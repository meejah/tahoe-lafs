# -*- mode: conf -*-

[run]
# only record trace data for allmydata.*
source =
       allmydata
# and don't trace the test files themselves, or generated files
omit =
     */allmydata/test/*
     */allmydata/_version.py

# when doing integration tests, we want separate .coverage* files for
# each process we've launched
parallel = True

# always do branch coverage
branch = True
